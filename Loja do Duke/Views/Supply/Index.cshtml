@model IEnumerable<Loja_do_Duke.Models.Supply>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de Suprimentos</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Supply" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp;   Criar novo suprimento
            </a>
        </div>
    </div>
    <br /> <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        Nome do Suprimento
                    </th>
                    <th>Preço</th>
                    <th>Quantidade no Inventário</th>
                    <th>Quantidade Disponível</th>
                    <th>Descrição</th>
                    <th>Categoria</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Name</td>
                        <td width="30%">@obj.Price</td>
                        <td width="30%">@obj.InventoryQuantity</td>
                        <td width="30%">@obj.AvailableQuantity</td>
                        <td width="30%">@obj.Description</td>
                        <td width="30%">@obj.Category.Name</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <div class="col-6 text-right">
                                    <a asp-controller="Supply" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary">Atualizar</a>
                                </div>
                                <div class="col-6 text-right">
                                    <a asp-controller="Supply" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-5">Excluir</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Não existem suprimentos.</p>
    }
</div>

