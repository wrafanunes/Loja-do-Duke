@model IEnumerable<Loja_do_Duke.Models.ApplicationUserSupply>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Inventário</h2>
        </div>
    </div>
    <br /> <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        Suprimento
                    </th>
                    <th>Quantidade</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.SupplyName</td>
                        <td width="30%">@obj.UserInventoryQuantity</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <div class="col-6 text-right">
                                    <a asp-controller="Supply" asp-route-Id="@obj.SupplyId" asp-action="Buy" class="btn btn-secondary">Comprar</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Inventário vazio.</p>
    }
</div>

