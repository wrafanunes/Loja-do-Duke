@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Bem-vindo</h1>
    @if (User.Identity.IsAuthenticated)
    {
        var twoFactor = ViewData["TwoFactorEnabled"];
        if (null != twoFactor && twoFactor.ToString().ToLower() == "true")
        {
            <a asp-action="RemoveAuthenticator" asp-controller="Account" class="btn btn-warning">Remover e reativar autenticação de dois fatores.</a>
        }
        else
        {
            <a asp-action="EnableAuthenticator" asp-controller="Account">Ativar autenticação de dois fatores</a>
        }

        <br /><br />@if (User.IsInRole("Admin"))
        {
            <h2>Seu nível de autorização é - Administrador</h2>
        }
        else if (User.IsInRole("User"))
        {
            <h2>Seu nível de autorização é - Usuário</h2>
        }
        else
        {
            <h2>Seu nível de autorização é - Super Administrador</h2>
        }
    }
    <p>Este site é uma representação da loja de suprimentos do NPC Duke de Resident Evil Village.</p>
    <p>Aprenda como <a href="https://docs.microsoft.com/aspnet/core">construir aplicações Web usando ASP.NET Core</a>.</p>
</div>
